@{
    ViewBag.Title = "RegistroProductos";
}
<h2>Registro Productos</h2>
<div style="padding:0em 3em">
    <form style="margin-top:100px">
        <div style="display:flex">
            <div class="form">
                <div class="form-group col-md-12">
                    <label>Producto</label>
                    <input type="text" class="form-control" id="nameP" placeholder="Nombre del Producto">
                </div>
                <div class="form-group col-md-12">
                    <label for="inputState">Empresa</label>
                    <select id="empresa" class="form-control">
                        @if (@ViewBag.Empresa != null)
                        {
                            <option selected>@ViewBag.Empresa</option>
                        }
                    </select>
                </div>
            </div>
            <div>
                <label for="inputAddress">Foto del Producto</label><br />
                <input name="file-input" id="foto" type="file" />
                <br />
                <img id="imgSalida" width="148em" height="148em" src="~/Content/Images/NoDisponible.jpg" />
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">

                <label for="inputPassword4">Descripción del Producto</label>
                <input type="text" class="form-control" id="descript" placeholder="Descripción">
            </div>
            <div class="form-group col-md-4">
                @*<label for="inputState">Tipo de Precio</label>
                <select id="inputState" class="form-control">
                       <option selected>Sistema de Precios</option>
                       <option>...</option>
                </select>*@

                @*<input type="file" name="pic" accept="image/*" style="margin-left:1em;">*@
            </div>
        </div>
        <button type="button" class="btn btn-primary" onclick="createP()" style="font-size:20px"><i class="far fa-save"></i></button>
    </form>
</div>
@section scripts{
    <script type="text/javascript" src="~/Scripts/Custom/datatables.min.js"></script>
    <script src="~/Scripts/Custom/httpmethods.js"></script>
    <script src="~/Scripts/Custom/Productos.js"></script>
}