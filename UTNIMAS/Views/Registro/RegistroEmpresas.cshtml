
@{
    ViewBag.Title = "RegistroEmpresas";
}

<h2>Registrar Empresas</h2>
<div style="padding:0em 3em">
    <form style="margin-top:100px">

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Empresa</label>
                <input type="text" class="form-control" id="" placeholder="Nombre de la Empresa">
            </div>
            <div class="form-group">
                <label for="inputTelephone">Teléfono</label>
                <input type="text" class="form-control" id="inputTelephone" placeholder="Teléfono">
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email de la Empresa">
            </div>
            <div class="form-group col-md-2">
                <label for="inputPassword4">Nombre del Contacto</label>
                <input type="text" class="form-control" id="inputPassword4" placeholder="Persona de Contacto">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputState">Provincia</label>
                <select id="inputState" class="form-control">
                    <option selected>Provincia...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Cantón</label>
                <select id="inputState" class="form-control">
                    <option selected>Cantón...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputState">Distrito</label>
                <select id="inputState" class="form-control">
                    <option selected>Distrito...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Dirección</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="Observaciones">
        </div>
        <div class="form-group">
            <label for="inputState">Sector Producción</label>
            <select id="inputState" class="form-control">
                <option selected>Sector de Producción...</option>
                <option>...</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="font-size:20px"><i class="far fa-save"></i></button>
    </form>
</div>

