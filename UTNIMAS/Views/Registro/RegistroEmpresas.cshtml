@{
    ViewBag.Title = "RegistroEmpresas";
}
<h2>Registrar Empresas</h2>
<div style="padding:0em 3em">
    <form style="margin-top:100px">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Empresa</label>
                <input type="text" class="form-control" id="name" placeholder="Nombre de la Empresa">
            </div>
            <div class="form-group col-md-4">
                <label>Telefono</label>
                <input type="text" class="form-control" id="tel" placeholder="Teléfono">
            </div>
            <div class="form-group col-md-2">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Nombre de Contacto</label>
                <input type="text" class="form-control" id="contactName" placeholder="Nombre de Contacto">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Direccion</label>
                <input type="text" class="form-control" id="direction" placeholder="Dirección">
            </div>
            <div class="form-group col-md-2">
                <label for="inputState">Sector Producción</label>
                <select id="production" class="form-control">
                    <option selected>Agricultura</option>
                    <option selected>Apicultura y Pesca</option>
                    <option selected>Artísticas y Entretenimiento</option>
                    <option selected>Actividad Inmobiliaria</option>
                    <option selected>Alimentación y Bebidas</option>
                    <option selected>Banca y Finanzas</option>
                    <option selected>Comercio Exterior</option>
                    <option selected>Comunicación</option>
                    <option selected>Comercio</option>
                    <option selected>Construcción</option>
                    <option selected>Electrónica</option>
                    <option selected>Enseñanza / Educación</option>
                    <option selected>Electricidad</option>
                    <option selected>Fabricación Industrial</option>
                    <option selected>Ganadería</option>
                    <option selected>Mercadeo</option>
                    <option selected>Minería y Canteras</option>
                    <option selected>Manofacturación</option>
                    <option selected>Medicina, Salud y Farmaceútica</option>
                    <option selected>Hotelería</option>
                    <option selected>Producción Madera</option>
                    <option selected>Producción Plástico</option>
                    <option selected>Productos Químicos y de Limpieza</option>
                    <option selected>Silvicultura</option>
                    <option selected>Servicio Ténico</option>
                    <option selected>Servicio de Seguros</option>
                    <option selected>Servicios Básicos</option>
                    <option selected>Servicios Profesionales</option>
                    <option selected>Servicio Doméstico</option>
                    <option selected>Turismo</option>
                    <option selected>Transportes</option>
                    <option selected>Textiles y Ropa</option>
                    <option selected>Recreativas</option>
                    <option selected>Reparación y Mantenimiento</option>
                    <option selected>Reciclaje</option>
                </select>
            </div>
        </div>
        <button type="button" class="btn btn-primary" onclick="createE()" style="font-size:20px"><i class="far fa-save"></i></button>
    </form>
</div>
@section scripts{
    <script type="text/javascript" src="~/Scripts/Custom/datatables.min.js"></script>
    <script src="~/Scripts/Custom/httpmethods.js"></script>
    <script src="~/Scripts/Custom/Empresas.js"></script>
}
